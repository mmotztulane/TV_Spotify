<p id="notice"><%= notice %></p>

<h1>Movies</h1>
<style>
    body {
  background-color: rgb(35,35,35);
    }
</style>

<div class="header">
        <div class="header-right">
            <a href="users.html" class="btn btn-info">Users</a>
            <a href="movies.html" class="btn btn-info">Movies</a>
            <a href="account.html" class="btn btn-info">Account</a>
            <a href="settings.html" class="btn btn-info">settings</a>
        </div>
     </div>

<div class="table-responsive">        
  <table class="table table-dark table-hover">
  <thead>
    <tr>
      <th>Movie</th>
      <th>Likes</th>
      <th>Dislikes</th>
      <th>Comments</th>
      <th>Genre</th>
      <th>Age rating</th>
      <th>Release date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.movie %></td>
        <td><%= movie.likes %></td>
        <td><%= movie.dislikes %></td>
        <td><%= movie.comments %></td>
        <td><%= movie.genre %></td>
        <td><%= movie.age_rating %></td>
        <td><%= movie.release_date %></td>
        <td><%= link_to 'Show', movie, class: "btn btn-outline-primary btn-sm" %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie), class: "btn btn-outline-primary btn-sm" %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-primary btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>
<a href="movies/new" class="btn btn-primary">Add Movie</a>
