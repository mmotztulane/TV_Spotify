<p id="notice"><%= notice %></p>

<h1>Movies</h1>
<style>
    body {
  background-color: rgb(35,35,35);
    }
</style>
<br/>
<div class="header">
        <form>
                        <div class="input-group">
                            <input class="form-control" type="text" placeholder="Search for..." aria-label="Search for..." aria-describedby="btnNavbarSearch" />
                            <button class="btn btn-primary" id="btnNavbarSearch" type="button"><i class="fas fa-search"></i></button>
                        </div>
                    </form>
     </div>
<br/>
<div class="table-responsive">        
  <table class="table table-dark table-hover">
  <thead>
    <tr>
      <th>Movie</th>
      <th>Likes</th>
      <th>Dislikes</th>
      <th>Comments</th>
      <th>Genre</th>
      <th>Age rating</th>
      <th>Release date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.movie %></td>
        <td><%= movie.likes %></td>
        <td><%= movie.dislikes %></td>
        <td><%= movie.comments %></td>
        <td><%= movie.genre %></td>
        <td><%= movie.age_rating %></td>
        <td><%= movie.release_date %></td>
        <td><%= link_to '', movie, class: "fas fa-eye" %></td>
        <td><%= link_to '', edit_movie_path(movie), class: "fas fa-edit" %> </td>
        <td><%= link_to '', movie, method: :delete, data: { confirm: 'Are you sure?'}, class: "far fa-trash-alt" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>
<a href="movies/new" class="btn btn-primary">Add Movie</a>
