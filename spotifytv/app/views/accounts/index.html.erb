<p id="notice"><%= notice %></p>

<h1>Account</h1>

<style>
    body {
  background-color: rgb(35,35,35);
    }
</style>

<div class="container">  
    <br/>
        <div class="table-responsive">        
  <table class="table table-dark table-hover">
  <thead>
    <tr>
      <th>Username</th>
      <th>Password</th>
     <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.name %></td>
        <td><%= account.password %></td>
        <td><%= link_to 'Show', account, class: "btn btn-outline-primary btn-sm" %></td>
        <td><%= link_to 'Edit', edit_account_path(account), class: "btn btn-outline-primary btn-sm" %></td>
        <td><%= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?'}, class: "btn btn-outline-primary btn-sm" %> </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
    </div>  


