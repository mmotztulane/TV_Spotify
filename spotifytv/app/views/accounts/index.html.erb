<p id="notice"><%= notice %></p>
<h1>Account</h1>

<div class="container">  


    <div class="header">
        <%= image_tag 'defaultprofile.png', alt: current_login.email , class: 'd-block mx-auto' %>
        <h2><%= current_login.email %></h2>
        <div><a>Edit Account</a></div>
    </div>
 
    <div>Email: <span class="info"><%= current_login.email %></span></div>
    <div>Followers: <span class="info">0</span></div>
    <div>Following: <span class="info">0</span></div>
    <br/>
    <hr>
         <%= form_tag(search_path, :method => "get") do %>
        <div class="input-group my-2 my-lg-0">
            <%= search_field_tag :search, params[:search], placeholder: "Search", class: "form-control my-lg-0"%>
            <div class="input-group-btn-outline-success my-2 my-sm-0">
                <%= button_tag "Search", :class => 'btn btn-outline-success', :name => nil%>
            </div>
        </div>
        <% end %>
    
    
    <hr>
  <h3>All your posts:</h3>
  <table class="table table-dark table-hover">
  <thead>
        <tr>
          <th>Movie</th>
          <th>Email</th>
          <th>Reaction</th>
          <th>Comment</th>
          <th colspan="3"></th>
        </tr>
      </thead>

  <tbody>
        <% @users.each do |user| %>
             <% if user.get_name == current_login.email %>
              <tr>
                <td><%= Movie.where(id: user.movie_id)[0].movie  %></td>
                <td><%= user.get_name %></td>
                <td><%= user.reaction %></td>
                <td><%= user.comment %></td>
                <!--
                <td><%= link_to '', user, class: "fas fa-eye" %></td>
                <td><%= link_to '', edit_user_path(user), class: "fas fa-edit" %> </td>
                <td><%= link_to '', user, method: :delete, data: { confirm: 'Are you sure?'}, class: "far fa-trash-alt" %></td>
                   -->
              <% end %>
               
          </tr>
        <% end %>
      </tbody>
</table>
</div>
    </div>  


