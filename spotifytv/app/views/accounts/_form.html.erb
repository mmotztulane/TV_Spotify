
<%= form_with(model: account, local: true) do |form| %>
  <% if account.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(account.errors.count, "error") %> prohibited this account from being saved:</h2>

      <ul>
        <% account.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group" >
      
    <label for="name">Username:</label>
    <ul>
       <li>Only allows capital/lowercase letters and numbers.</li>
    </ul>
    <%= form.text_field :name, class: "form-control", placeholder: "Letters and Numbers", type: :hidden %>
  </div>

  <div class="form-group">
    <label for="password">Password:</label>
    <ul>
       <li>Only allows letters, numbers, commas, spaces, and end of sentence punctuation.</li>
    </ul>
    <%= form.text_field :password, class: "form-control" %>
  </div>


<div class="col-xs-12" style="height:20px;"></div>
  <div class="actions" role = "button">
    <%= form.submit :Submit, class: 'btn btn-success' %>
  </div>
<% end %>
