<p id="notice"><%= notice %></p>

<h1>Opinions on Shrek</h1>

<style>
    body {
  background-color: rgb(35,35,35);
    }
</style>

<div class="header">
     
     </div>

<%= image_tag 'Shrek.jpg', alt: 'Shrek', class: 'd-block mx-auto' %>

<div class="table-responsive">        
  <table class="table table-dark table-hover">
      <thead>
        <tr>
          <th>Username</th>
          <th>Reaction</th>
          <th>Comment</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.username %></td>
            <td><%= user.reaction %></td>
            <td><%= user.comment %></td>
            <td><%= link_to '', user, class: "fas fa-eye" %></td>
            <td><%= link_to '', edit_user_path(user), class: "fas fa-edit" %> </td>
            <td><%= link_to '', user, method: :delete, data: { confirm: 'Are you sure?'}, class: "far fa-trash-alt" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>

<br>

<a href="users/new" class="btn btn-primary">New Opinion on Shrek</a>

