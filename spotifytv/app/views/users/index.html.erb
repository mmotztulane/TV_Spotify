<p id="notice"><%= notice %></p>
<% name = current_login.present? ? current_login.email : 'none' %>
<h1>Opinions on <%= Movie.where(id: params[:title])[0].movie %></h1>


<div class="header"></div>

<%= image_tag '1.jpg', alt: 'Shrek' , class: 'd-block mx-auto' %>

<div class="table-responsive">        
  <table class="table table-dark table-hover">
      <thead>
        <tr>
          <th>Email</th>
          <th>Reaction</th>
          <th>Comment</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <% if user.movie_id.to_s == params[:title] %>
              <tr>
                <td><%= user.get_name %></td>
                <td><%= user.reaction %></td>
                <td><%= user.comment %></td>
                <td><%= link_to '', user, class: "fas fa-eye" %></td>
                <% if user.get_name == name %>
                    <td><%= link_to '', edit_user_path(user), class: "fas fa-edit" %> </td>
                    <td><%= link_to '', user, method: :delete, data: { confirm: 'Are you sure?'}, class: "far fa-trash-alt" %></td>
                <% end %>
               <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>

<br>

<% if login_signed_in? %>
    <% if current_login.get_has_comments == 0 %>
        <a href="users/new" class="btn btn-primary">New Opinion</a>
    <% end %>
<% end %>

