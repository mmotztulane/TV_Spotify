<p id="notice"><%= notice %></p>

<h1>Opinions on Shrek</h1>

<style>
    body {
  background-color: rgb(35,35,35);
    }
</style>

<div class="header">
        <div class="header-right">
            <a href="users.html" class="btn btn-info">Users</a>
            <a href="movies.html" class="btn btn-info">Movies</a>
            <a href="account.html" class="btn btn-info">Account</a>
            <a href="settings.html" class="btn btn-info">settings</a>
        </div>
     </div>

<img src="https://upload.wikimedia.org/wikipedia/en/3/39/Shrek.jpg" class="rounded mx-auto d-block" alt="Shrek">

<div class="table-responsive">        
  <table class="table table-dark table-hover">
      <thead>
        <tr>
          <th>Username</th>
          <th>Reaction</th>
          <th>Comment</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.username %></td>
            <td><%= user.reaction %></td>
            <td><%= user.comment %></td>
            <td><%= link_to 'Show', user, class: "btn btn-outline-primary btn-sm" %></td>
            <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-outline-primary btn-sm" %></td>
            <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-primary btn-sm" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>

<br>

<a href="users/new" class="btn btn-primary">New Opinion on Shrek</a>

