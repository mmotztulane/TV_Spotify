
<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <%= form.text_field :username, class: "form-control", placeholder: "Letters and Numbers", type: :hidden %>

  <div class="form-group">
    <label for="Reaction">Reaction:</label>
      <div class="col">
    <%= form.select :reaction, ['Like', 'Dislike']%> 
      </div>
  </div>

  <div class="form-group">
    <label for="comment?">Comment:</label>
    <ul>
       <li>Only allows letters, numbers, commas, spaces, and end of sentence punctuation.</li>
    </ul>
    <%= form.text_field :comment, class: "form-control", placeholder: "optional", :value => "No Comment" %>
  </div>

  <div class="field form-group">
    <%= form.number_field :login_id, id: :user_login_id, class:"form-control", value: current_login.id, type: :hidden %>
  </div>
    
  <div class="field form-group">
    <%= form.number_field :movie_id, id: :user_movie_id, class:"form-control", value: session[:title], type: :hidden %>
  </div>

<div class="col-xs-12" style="height:20px;"></div>
  <div class="actions" role = "button">
    <%= form.submit :Submit, class: 'btn btn-success' %>
  </div>
<% end %>
